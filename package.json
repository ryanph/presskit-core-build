  "bugs": {
    "url": "https://github.com/ryanph/presskit-core-build/issues"
  },
  "homepage": "https://github.com/ryanph/presskit-core-build#readme",
  "description": "",
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
